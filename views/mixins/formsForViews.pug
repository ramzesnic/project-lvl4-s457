mixin getTaskForm(id, f, method, defaults)
  - const params = id ? ['editTask', { id }] : 'newTask';
  - const url = params instanceof Array ? urlFor(...params) : urlFor(params);
  +formFor(f, { url, method })
    +input(f, 'name')
    +textarea(f, 'description')
    +option(f, 'status', defaults.statusId)
    +option(f, 'assignedTo', defaults.executorId)
    +input(f, 'tags', { as: 'text' }, t('view.task.filter.tags_placeholder'))
    .form-group
      +button(f)
      +buttonLink('tasksAll', 'get', t('view.buttons.cancel'), 'btn-secondary')

mixin getStatusForm(id, f, method)
  - const params = id ? ['status', { id }] : 'newStatus';
  - const url = params instanceof Array ? urlFor(...params) : urlFor(params);
  +formFor(f, { url, method })
    +input(f, 'name')
    .form-group
      +button(f)
      +buttonLink('statusAll', 'get', t('view.buttons.cancel'), 'btn-secondary')
